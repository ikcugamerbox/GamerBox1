<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="MainBackgroundBrush" Color="#0D0D0D"/>
    <SolidColorBrush x:Key="PanelBackgroundBrush" Color="#161616"/>
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="#1A1A1A"/>
    <SolidColorBrush x:Key="InputBackgroundBrush" Color="#252525"/>
    <SolidColorBrush x:Key="BorderBrush" Color="#333333"/>

    <SolidColorBrush x:Key="PrimaryTextBrush" Color="White"/>
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="#BBBBBB"/>
    <SolidColorBrush x:Key="MutedTextBrush" Color="Gray"/>

    <SolidColorBrush x:Key="AccentBrush" Color="#42BC88"/>
    <SolidColorBrush x:Key="AccentForegroundBrush" Color="White"/>

</ResourceDictionary>