<Window x:Class="GamerBoxPresantationLayer.WPF.AddReviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="İnceleme Yaz" Height="400" Width="400"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        Background="#121212">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="İNCELEME YAZ" Foreground="#42BC88" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <TextBlock x:Name="txtGameTitle" Text="Oyun Adı" Foreground="White" FontSize="16" Margin="0,0,0,10"/>

            <Label Content="Puanınız (1-5)" Foreground="Gray"/>
            <ComboBox x:Name="cmbRating" Height="30" SelectedIndex="4">
                <ComboBoxItem Content="1 - Çok Kötü"/>
                <ComboBoxItem Content="2 - Kötü"/>
                <ComboBoxItem Content="3 - Orta"/>
                <ComboBoxItem Content="4 - İyi"/>
                <ComboBoxItem Content="5 - Harika"/>
            </ComboBox>

            <Label Content="Yorumunuz" Foreground="Gray" Margin="0,10,0,0"/>
            <TextBox x:Name="txtContent" Height="100" TextWrapping="Wrap" AcceptsReturn="True" Padding="5"/>

            <Button Content="GÖNDER" Height="40" Margin="0,20,0,0" 
                    Background="#42BC88" Foreground="White" FontWeight="Bold"
                    Click="btnSubmit_Click"/>
        </StackPanel>
    </Grid>
</Window>