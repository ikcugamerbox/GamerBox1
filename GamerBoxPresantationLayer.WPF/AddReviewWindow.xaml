<Window x:Class="GamerBoxPresantationLayer.WPF.AddReviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="İnceleme Yaz" Height="400" Width="400"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        Background="{DynamicResource MainBackgroundBrush}">

    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="İNCELEME YAZ" Foreground="{DynamicResource AccentBrush}" 
                       FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <TextBlock x:Name="txtGameTitle" Text="Oyun Adı" Foreground="{DynamicResource PrimaryTextBrush}" 
                       FontSize="16" Margin="0,0,0,10" FontWeight="SemiBold"/>

            <Label Content="Puanınız (1-5)" Foreground="{DynamicResource SecondaryTextBrush}"/>

            <ComboBox x:Name="cmbRating" Height="30" SelectedIndex="4" 
                      Background="{DynamicResource InputBackgroundBrush}" 
                      Foreground="{DynamicResource PrimaryTextBrush}" BorderThickness="0" Padding="5">
                <ComboBoxItem Content="1 - Çok Kötü"/>
                <ComboBoxItem Content="2 - Kötü"/>
                <ComboBoxItem Content="3 - Orta"/>
                <ComboBoxItem Content="4 - İyi"/>
                <ComboBoxItem Content="5 - Harika"/>
            </ComboBox>

            <Label Content="Yorumunuz" Foreground="{DynamicResource SecondaryTextBrush}" Margin="0,10,0,0"/>
            <TextBox x:Name="txtContent" Height="100" TextWrapping="Wrap" AcceptsReturn="True" Padding="5"
                     Style="{DynamicResource TextboxStyle}" VerticalContentAlignment="Top"/>

            <Button Content="GÖNDER" Height="40" Margin="0,20,0,0" 
                    Background="{DynamicResource AccentBrush}" Foreground="White" FontWeight="Bold"
                    Click="btnSubmit_Click">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>
        </StackPanel>
    </Grid>
</Window>