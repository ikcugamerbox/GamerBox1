<Window x:Class="GamerBoxPresantationLayer.WPF.AddGameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Yeni Oyun Ekle" Height="550" Width="400"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        Background="{DynamicResource MainBackgroundBrush}">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="YENİ OYUN EKLE" Foreground="{DynamicResource AccentBrush}" 
                       FontSize="20" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center"/>

            <Label Content="Oyun Adı" Foreground="{DynamicResource SecondaryTextBrush}"/>
            <TextBox x:Name="txtTitle" Height="30" Padding="5" Style="{DynamicResource TextboxStyle}"/>

            <Label Content="Tür (Örn: RPG, FPS)" Foreground="{DynamicResource SecondaryTextBrush}" Margin="0,10,0,0"/>
            <TextBox x:Name="txtGenre" Height="30" Padding="5" Style="{DynamicResource TextboxStyle}"/>

            <Label Content="Açıklama" Foreground="{DynamicResource SecondaryTextBrush}" Margin="0,10,0,0"/>
            <TextBox x:Name="txtDesc" Height="60" TextWrapping="Wrap" Padding="5" AcceptsReturn="True" 
                     Style="{DynamicResource TextboxStyle}" VerticalContentAlignment="Top"/>

            <Label Content="Fiyat (TL)" Foreground="{DynamicResource SecondaryTextBrush}" Margin="0,10,0,0"/>
            <TextBox x:Name="txtPrice" Height="30" Padding="5" Text="0" Style="{DynamicResource TextboxStyle}"/>

            <Label Content="Oyun Görseli" Foreground="{DynamicResource SecondaryTextBrush}" Margin="0,10,0,0"/>
            <DockPanel>
                <Button Content="..." Width="40" Click="btnSelectImage_Click" DockPanel.Dock="Right" Margin="5,0,0,0"
                        Background="{DynamicResource InputBackgroundBrush}" Foreground="{DynamicResource PrimaryTextBrush}" BorderThickness="0">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="3"/>
                        </Style>
                    </Button.Resources>
                </Button>
                <TextBox x:Name="txtImageUrl" Height="30" Padding="5" IsReadOnly="True" Text="Varsayılan Resim" 
                         Style="{DynamicResource TextboxStyle}"/>
            </DockPanel>

            <Image x:Name="imgPreview" Height="100" Margin="0,10,0,0" Stretch="Uniform" Source="/Resources/treasure-chest.png"/>

            <Button Content="KAYDET" Height="40" Margin="0,20,0,0" 
                    Background="{DynamicResource AccentBrush}" Foreground="White" FontWeight="Bold" 
                    Click="btnSave_Click">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>
        </StackPanel>
    </Grid>
</Window>