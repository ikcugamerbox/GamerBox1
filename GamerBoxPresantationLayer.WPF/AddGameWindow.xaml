<Window x:Class="GamerBoxPresantationLayer.WPF.AddGameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Yeni Oyun Ekle" Height="600" Width="420"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        Background="{DynamicResource MainBackgroundBrush}">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="YENİ OYUN EKLE" Foreground="{DynamicResource AccentBrush}" 
                   FontSize="20" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,0,0,20">
            <StackPanel>
                <Label Content="Oyun Adı" Foreground="{DynamicResource SecondaryTextBrush}"/>
                <TextBox Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}" Height="30" Padding="5" Style="{DynamicResource TextboxStyle}"/>

                <Label Content="Tür (Örn: RPG, FPS)" Foreground="{DynamicResource SecondaryTextBrush}" Margin="0,10,0,0"/>
                <TextBox Text="{Binding Genre, UpdateSourceTrigger=PropertyChanged}" Height="30" Padding="5" Style="{DynamicResource TextboxStyle}"/>

                <Label Content="Açıklama" Foreground="{DynamicResource SecondaryTextBrush}" Margin="0,10,0,0"/>
                <TextBox Text="{Binding Description}" Height="80" TextWrapping="Wrap" Padding="5" AcceptsReturn="True" 
                         Style="{DynamicResource TextboxStyle}" VerticalContentAlignment="Top"/>

                <Label Content="Fiyat (TL)" Foreground="{DynamicResource SecondaryTextBrush}" Margin="0,10,0,0"/>
                <TextBox Text="{Binding PriceText}" Height="30" Padding="5" Style="{DynamicResource TextboxStyle}"/>

                <Label Content="Oyun Görseli" Foreground="{DynamicResource SecondaryTextBrush}" Margin="0,10,0,0"/>
                <DockPanel>
                    <Button Command="{Binding SelectImageCommand}" Content="..." Width="40" DockPanel.Dock="Right" Margin="5,0,0,0"
                            Background="{DynamicResource InputBackgroundBrush}" Foreground="{DynamicResource PrimaryTextBrush}" BorderThickness="0">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="3"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                    <TextBox Text="{Binding ImageUrl}" Height="30" Padding="5" IsReadOnly="True" 
                             Style="{DynamicResource TextboxStyle}"/>
                </DockPanel>

                <Image Source="{Binding ImageUrl}" Height="150" Margin="0,15,0,0" Stretch="Uniform" />
            </StackPanel>
        </ScrollViewer>

        <Button Grid.Row="2" Command="{Binding SaveCommand}" Content="KAYDET" Height="45" 
                Background="{DynamicResource AccentBrush}" Foreground="White" FontWeight="Bold">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
        </Button>
    </Grid>
</Window>