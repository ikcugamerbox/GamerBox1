<UserControl x:Class="GamerBoxPresantationLayer.WPF.Classes.UCHome"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GamerBoxPresantationLayer.WPF.Classes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#0D0D0D">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- SEARCH BAR -->
        <DockPanel Margin="20,5,20,0" Grid.Row="0">

            <TextBox Width="400" Height="35"
                     Background="#1E1E1E"
                     Foreground="White"
                     BorderBrush="#333"
                     Padding="10"
                     FontSize="14"
                     Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"/>
        </DockPanel>

        <!-- POSTER GRID -->
        <ScrollViewer Grid.Row="1">
            <ItemsControl ItemsSource="{Binding FilteredGames}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="10" Background="#1A1A1A" CornerRadius="10" Width="180">
                            <StackPanel>
                                <Image Source="{Binding Poster}" Height="260" Margin="0 0 0 8" Stretch="UniformToFill"/>

                                <TextBlock Text="{Binding Title}" Foreground="White" FontSize="15" FontWeight="SemiBold" Margin="5,0"/>

                                <StackPanel Orientation="Horizontal" Margin="5">
                                    <TextBlock Text="{Binding Year}" Foreground="#8A8A8A"/>
                                    <TextBlock Text=" • " Foreground="#8A8A8A"/>
                                    <TextBlock Text="{Binding Rating}" Foreground="#42BC88"/>
                                </StackPanel>

                                <Button Content="İncele" Margin="5,0,5,10" Height="25"
                    Background="#333" Foreground="White" BorderThickness="0"
                    Tag="{Binding Id}" 
                    Click="btnReview_Click">
                                    <Button.Resources>
                                        <Style TargetType="Border">
                                            <Setter Property="CornerRadius" Value="5"/>
                                        </Style>
                                    </Button.Resources>
                                </Button>

                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>

            </ItemsControl>
        </ScrollViewer>

    </Grid>
</UserControl>
