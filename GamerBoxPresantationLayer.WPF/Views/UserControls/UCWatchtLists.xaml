<UserControl x:Class="GamerBoxPresantationLayer.WPF.Views.UserControls.UCWatchtLists"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Background="{DynamicResource MainBackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <DockPanel Margin="20,20,20,10">
            <TextBlock Text="Kütüphanem" FontSize="24" FontWeight="Bold" Foreground="{DynamicResource AccentBrush}"/>

            <Button Content="+ Yeni Oyun Ekle" HorizontalAlignment="Right" DockPanel.Dock="Right" 
                    Width="150" Height="30" Padding="10,0"
                    Background="{DynamicResource InputBackgroundBrush}" 
                    Foreground="{DynamicResource PrimaryTextBrush}" 
                    BorderThickness="0"
                    Click="btnAddGame_Click">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>
        </DockPanel>

        <ScrollViewer Grid.Row="1" Margin="10">
            <ItemsControl ItemsSource="{Binding MyGames}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Width="160" Height="240" Margin="10" 
                                Background="{DynamicResource CardBackgroundBrush}" CornerRadius="8">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Image Source="/Resources/treasure-chest.png" Stretch="Uniform" Margin="10"/>

                                <Border Grid.Row="1" Background="{DynamicResource PanelBackgroundBrush}" 
                                        Padding="5" CornerRadius="0,0,8,8">
                                    <StackPanel>
                                        <TextBlock Text="{Binding Title}" Foreground="{DynamicResource PrimaryTextBrush}" 
                                                   FontWeight="Bold" TextTrimming="CharacterEllipsis"/>
                                        <TextBlock Text="{Binding Genre}" Foreground="{DynamicResource MutedTextBrush}" FontSize="11"/>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <TextBlock Grid.Row="1" Text="Henüz kütüphanene oyun eklemedin."
                   Foreground="{DynamicResource MutedTextBrush}" FontSize="16" 
                   HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock.Style>
                <Style TargetType="TextBlock">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding MyGames.Count}" Value="0">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style>
        </TextBlock>
    </Grid>
</UserControl>