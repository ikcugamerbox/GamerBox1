<UserControl x:Class="GamerBoxPresantationLayer.WPF.Views.UserControls.UCProfile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">

    <Grid Background="{DynamicResource MainBackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Margin="20" Background="{DynamicResource CardBackgroundBrush}" 
                CornerRadius="15" Padding="20">
            <DockPanel>
                <Border Width="80" Height="80" CornerRadius="40" 
                        Background="{DynamicResource BorderBrush}" Margin="0,0,20,0" DockPanel.Dock="Left">
                    <TextBlock Text="👤" FontSize="40" 
                               HorizontalAlignment="Center" VerticalAlignment="Center" 
                               Foreground="{DynamicResource SecondaryTextBrush}"/>
                </Border>

                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="{Binding Username}" FontSize="24" FontWeight="Bold" 
                               Foreground="{DynamicResource AccentBrush}"/>
                    <TextBlock Text="{Binding Email}" FontSize="14" 
                               Foreground="{DynamicResource MutedTextBrush}" Margin="0,5,0,0"/>
                    <TextBlock Text="{Binding Bio}" FontSize="14" 
                               Foreground="{DynamicResource PrimaryTextBrush}" Margin="0,10,0,0" TextWrapping="Wrap"/>

                    <StackPanel Orientation="Horizontal" Margin="0,15,0,0">
                        <TextBlock Text="Takipçi: " Foreground="{DynamicResource MutedTextBrush}"/>
                        <TextBlock Text="{Binding FollowersCount}" Foreground="{DynamicResource PrimaryTextBrush}" 
                                   FontWeight="Bold" Margin="0,0,15,0"/>

                        <TextBlock Text="Takip: " Foreground="{DynamicResource MutedTextBrush}"/>
                        <TextBlock Text="{Binding FollowingCount}" Foreground="{DynamicResource PrimaryTextBrush}" FontWeight="Bold"/>
                    </StackPanel>
                </StackPanel>
            </DockPanel>
        </Border>

        <Border Grid.Row="1" Margin="20,0,20,20" Background="{DynamicResource CardBackgroundBrush}" 
                CornerRadius="15" Padding="15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Son Gönderiler" FontSize="18" FontWeight="SemiBold" 
                           Foreground="{DynamicResource PrimaryTextBrush}" Margin="0,0,0,10"/>

                <ScrollViewer Grid.Row="1">
                    <ItemsControl ItemsSource="{Binding UserPosts}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Margin="0,0,0,10" BorderBrush="{DynamicResource BorderBrush}" 
                                        BorderThickness="0,0,0,1" Padding="10">
                                    <StackPanel>
                                        <TextBlock Text="{Binding Content}" Foreground="{DynamicResource PrimaryTextBrush}" 
                                                   FontSize="14" TextWrapping="Wrap"/>
                                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                            <TextBlock Text="{Binding DateStr}" Foreground="{DynamicResource MutedTextBrush}" FontSize="12"/>
                                            <TextBlock Text=" • " Foreground="{DynamicResource MutedTextBrush}"/>
                                            <TextBlock Text="{Binding HashtagsStr}" Foreground="{DynamicResource AccentBrush}" FontSize="12"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</UserControl>