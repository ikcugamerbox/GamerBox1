<UserControl x:Class="GamerBoxPresantationLayer.WPF.Views.UserControls.UCProfile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">

    <Grid Background="#0D0D0D">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Margin="20" Background="#1A1A1A" CornerRadius="15" Padding="20">
            <DockPanel>
                <Border Width="80" Height="80" CornerRadius="40" Background="#333" Margin="0,0,20,0" DockPanel.Dock="Left">
                    <TextBlock Text="👤" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Gray"/>
                </Border>

                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="{Binding Username}" FontSize="24" FontWeight="Bold" Foreground="#42BC88"/>
                    <TextBlock Text="{Binding Email}" FontSize="14" Foreground="Gray" Margin="0,5,0,0"/>
                    <TextBlock Text="{Binding Bio}" FontSize="14" Foreground="White" Margin="0,10,0,0" TextWrapping="Wrap"/>

                    <StackPanel Orientation="Horizontal" Margin="0,15,0,0">
                        <TextBlock Text="Takipçi: " Foreground="Gray"/>
                        <TextBlock Text="{Binding FollowersCount}" Foreground="White" FontWeight="Bold" Margin="0,0,15,0"/>

                        <TextBlock Text="Takip: " Foreground="Gray"/>
                        <TextBlock Text="{Binding FollowingCount}" Foreground="White" FontWeight="Bold"/>
                    </StackPanel>
                </StackPanel>
            </DockPanel>
        </Border>

        <Border Grid.Row="1" Margin="20,0,20,20" Background="#1A1A1A" CornerRadius="15" Padding="15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Son Gönderiler" FontSize="18" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,10"/>

                <ScrollViewer Grid.Row="1">
                    <ItemsControl ItemsSource="{Binding UserPosts}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Margin="0,0,0,10" BorderBrush="#333" BorderThickness="0,0,0,1" Padding="10">
                                    <StackPanel>
                                        <TextBlock Text="{Binding Content}" Foreground="White" FontSize="14" TextWrapping="Wrap"/>
                                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                            <TextBlock Text="{Binding DateStr}" Foreground="Gray" FontSize="12"/>
                                            <TextBlock Text=" • " Foreground="Gray"/>
                                            <TextBlock Text="{Binding HashtagsStr}" Foreground="#42BC88" FontSize="12"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</UserControl>