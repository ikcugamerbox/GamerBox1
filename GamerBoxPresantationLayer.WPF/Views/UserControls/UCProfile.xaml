<UserControl x:Class="GamerBoxPresantationLayer.WPF.Views.UserControls.UCProfile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">

    <Grid Background="{DynamicResource MainBackgroundBrush}">
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
  
        <Border Grid.Row="0" Margin="20" Background="{DynamicResource CardBackgroundBrush}" 
                CornerRadius="15" Padding="20">
            <DockPanel>
                <StackPanel DockPanel.Dock="Left" Margin="0,0,20,0" VerticalAlignment="Top">

                    <Button Click="ProfileImage_Click" Cursor="Hand" Background="Transparent" BorderThickness="0">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <ContentPresenter/>
                            </ControlTemplate>
                        </Button.Template>

                        <Button.ContextMenu>
                            <ContextMenu x:Name="ProfileMenu" HasDropShadow="True" FontSize="14">
                                <ContextMenu.Style>
                                    <Style TargetType="ContextMenu">
                                        <Setter Property="Background" Value="{DynamicResource CardBackgroundBrush}"/>
                                        <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}"/>
                                        <Setter Property="BorderBrush" Value="{DynamicResource AccentBrush}"/>
                                        <Setter Property="BorderThickness" Value="1"/>
                                        <Setter Property="Padding" Value="5"/>
                                    </Style>
                                </ContextMenu.Style>

                                <MenuItem Header="Fotoğrafı Değiştir" Command="{Binding ChangeProfilePictureCommand}" 
              Background="{DynamicResource CardBackgroundBrush}" 
              Foreground="{DynamicResource PrimaryTextBrush}">
                                    <MenuItem.Icon>
                                        <TextBlock Text="📷"/>
                                    </MenuItem.Icon>
                                </MenuItem>

                                <MenuItem Header="Mevcut Fotoğrafı Kaldır" Command="{Binding RemoveProfilePictureCommand}" 
              Foreground="#FF5555"
              Background="{DynamicResource CardBackgroundBrush}">
                                    <MenuItem.Icon>
                                        <TextBlock Text="🗑️"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                            </ContextMenu>
                        </Button.ContextMenu>

                        <Border Width="100" Height="100" CornerRadius="50" BorderBrush="{DynamicResource AccentBrush}" BorderThickness="2">
                            <Border.Background>
                                <ImageBrush ImageSource="{Binding ProfilePictureUrl}" Stretch="UniformToFill"/>
                            </Border.Background>

                            <Grid>
                                <TextBlock Text="👤" FontSize="50" 
                           HorizontalAlignment="Center" VerticalAlignment="Center" 
                           Foreground="{DynamicResource SecondaryTextBrush}">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding ProfilePictureUrl}" Value="">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding ProfilePictureUrl}" Value="{x:Null}">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>
                        </Border>
                    </Button>

                    <TextBlock Text="Düzenlemek için tıklayın" FontSize="10" Foreground="{DynamicResource MutedTextBrush}" 
               HorizontalAlignment="Center" Margin="0,5,0,0"/>

                </StackPanel>

                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="{Binding Username}" FontSize="24" FontWeight="Bold" 
                               Foreground="{DynamicResource AccentBrush}"/>
                    <TextBlock Text="{Binding Email}" FontSize="14" 
                               Foreground="{DynamicResource MutedTextBrush}" Margin="0,5,0,0"/>
                    <TextBlock Text="{Binding Bio}" FontSize="14" 
                               Foreground="{DynamicResource PrimaryTextBrush}" Margin="0,10,0,0" TextWrapping="Wrap"/>

                    <StackPanel Orientation="Horizontal" Margin="0,15,0,0">
                        <Button Command="{Binding ShowFollowersCommand}" 
        Background="Transparent" BorderThickness="0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding FollowersCount}" FontWeight="Bold" Foreground="White"/>
                                <TextBlock Text=" Takipçi" Foreground="Gray" Margin="5,0,0,0"/>
                            </StackPanel>
                        </Button>

                        <Button Command="{Binding ShowFollowingCommand}" 
        Background="Transparent" BorderThickness="0" Margin="15,0,0,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding FollowingCount}" FontWeight="Bold" Foreground="White"/>
                                <TextBlock Text=" Takip" Foreground="Gray" Margin="5,0,0,0"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </DockPanel>
        </Border>

        <Border Grid.Row="1" Margin="20,0,20,20" Background="{DynamicResource CardBackgroundBrush}" 
                CornerRadius="15" Padding="15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Son Gönderiler" FontSize="18" FontWeight="SemiBold" 
                           Foreground="{DynamicResource PrimaryTextBrush}" Margin="0,0,0,10"/>

                <ScrollViewer Grid.Row="1">
                    <ItemsControl ItemsSource="{Binding UserPosts}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Margin="0,0,0,10" BorderBrush="{DynamicResource BorderBrush}" 
                    BorderThickness="0,0,0,1" Padding="10">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="{Binding Content}" Foreground="{DynamicResource PrimaryTextBrush}" 
                                   FontSize="14" TextWrapping="Wrap"/>
                                            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                                <TextBlock Text="{Binding DateStr}" Foreground="{DynamicResource MutedTextBrush}" FontSize="12"/>
                                                <TextBlock Text=" • " Foreground="{DynamicResource MutedTextBrush}"/>
                                                <TextBlock Text="{Binding HashtagsStr}" Foreground="{DynamicResource AccentBrush}" FontSize="12"/>
                                            </StackPanel>
                                        </StackPanel>

                                        <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Top">

                                            <Button Style="{StaticResource MiniButtons}" Margin="0,0,5,0" ToolTip="Düzenle"
                                                    Content="&#xE70F;"
                                                    Command="{Binding DataContext.EditPostCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}"/>
    
                                            <Button Style="{StaticResource MiniButtons}" ToolTip="Sil"
                                                    Foreground="#FF5555" Content="&#xE74D;"
                                                    Command="{Binding DataContext.DeletePostCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</UserControl>