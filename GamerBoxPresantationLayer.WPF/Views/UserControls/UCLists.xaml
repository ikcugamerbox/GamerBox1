<UserControl x:Class="GamerBoxPresantationLayer.WPF.Views.UserControls.UCLists"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>

    <Grid Background="{DynamicResource MainBackgroundBrush}">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">

                <TextBlock Text="En Çok Puan Alan Oyunlar 🏆" FontSize="20" FontWeight="Bold" 
                           Foreground="#FFD700" Margin="0,0,0,10"/>

                <ScrollViewer HorizontalScrollBarVisibility="Auto" Margin="0,0,0,30">
                    <ItemsControl ItemsSource="{Binding TopRatedGames}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Width="140" Margin="0,0,15,0" 
                                        Background="{DynamicResource CardBackgroundBrush}" CornerRadius="8">
                                    <StackPanel>
                                        <Image Source="/Resources/treasure-chest.png" Height="180" Stretch="UniformToFill"/>
                                        <TextBlock Text="{Binding Title}" Foreground="{DynamicResource PrimaryTextBrush}" 
                                                   Margin="5" FontWeight="SemiBold" TextTrimming="CharacterEllipsis"/>
                                        <TextBlock Text="{Binding RatingStr}" Foreground="{DynamicResource AccentBrush}" 
                                                   Margin="5,0,5,5" FontSize="12"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>


                <TextBlock Text="Sizin İçin Önerilenler 🎯" FontSize="20" FontWeight="Bold" 
                           Foreground="{DynamicResource AccentBrush}" Margin="0,0,0,10"/>

                <ScrollViewer HorizontalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding RecommendedGames}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Width="140" Margin="0,0,15,0" 
                                        Background="{DynamicResource CardBackgroundBrush}" CornerRadius="8">
                                    <StackPanel>
                                        <Image Source="/Resources/treasure-chest.png" Height="180" Stretch="UniformToFill"/>
                                        <TextBlock Text="{Binding Title}" Foreground="{DynamicResource PrimaryTextBrush}" 
                                                   Margin="5" FontWeight="SemiBold" TextTrimming="CharacterEllipsis"/>
                                        <TextBlock Text="{Binding Genre}" Foreground="{DynamicResource MutedTextBrush}" 
                                                   Margin="5,0,5,5" FontSize="12"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <TextBlock Text="Öneri almak için giriş yapmalısınız." Foreground="{DynamicResource MutedTextBrush}" 
                           FontStyle="Italic" Visibility="{Binding IsGuest, Converter={StaticResource BooleanToVisibilityConverter}}"/>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>