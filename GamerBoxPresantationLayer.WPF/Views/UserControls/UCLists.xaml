<UserControl x:Class="GamerBoxPresantationLayer.WPF.Views.UserControls.UCLists"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>

    <Grid Background="{DynamicResource MainBackgroundBrush}">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">

                <TextBlock Text="En Çok Puan Alan Oyunlar 🏆" FontSize="20" FontWeight="Bold" 
                           Foreground="#FFD700" Margin="0,0,0,10"/>

                <ScrollViewer HorizontalScrollBarVisibility="Auto" Margin="0,0,0,30">
                    <ItemsControl ItemsSource="{Binding TopRatedGames}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Width="140" Margin="0,0,15,0" 
                                        Background="{DynamicResource CardBackgroundBrush}" CornerRadius="8">
                                    <StackPanel>
                                        <Image Source="{Binding Poster}" Height="180" Stretch="UniformToFill"/>
                                        <TextBlock Text="{Binding Title}" Foreground="{DynamicResource PrimaryTextBrush}" 
                                                   Margin="5" FontWeight="SemiBold" TextTrimming="CharacterEllipsis"/>
                                        <TextBlock Text="{Binding Rating}" Foreground="{DynamicResource AccentBrush}" 
                                                   Margin="5,0,5,5" FontSize="12"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <TextBlock Text="Sizin İçin Önerilenler 🎯" FontSize="20" FontWeight="Bold" 
                           Foreground="{DynamicResource AccentBrush}" Margin="0,0,0,10"/>

                <ScrollViewer HorizontalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding RecommendedGames}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Width="140" Margin="0,0,15,0" 
                                        Background="{DynamicResource CardBackgroundBrush}" CornerRadius="8">
                                    <StackPanel>
                                        <Image Source="{Binding Poster}" Height="180" Stretch="UniformToFill"/>
                                        <TextBlock Text="{Binding Title}" Foreground="{DynamicResource PrimaryTextBrush}" 
                                                   Margin="5" FontWeight="SemiBold" TextTrimming="CharacterEllipsis"/>
                                        <TextBlock Text="{Binding Genre}" Foreground="{DynamicResource MutedTextBrush}" 
                                                   Margin="5,0,5,5" FontSize="12"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <TextBlock Text="Öneri almak ve liste oluşturmak için giriş yapmalısınız." 
                           Foreground="{DynamicResource MutedTextBrush}" 
                           FontStyle="Italic" Margin="0,10,0,0"
                           Visibility="{Binding IsGuest, Converter={StaticResource BooleanToVisibilityConverter}}"/>


                <StackPanel>

                    <StackPanel.Style>
                        <Style TargetType="StackPanel">
                            <Setter Property="Visibility" Value="Visible"/>

                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsGuest}" Value="True">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>

                    <TextBlock Text="Özel Listelerim 📂" FontSize="20" FontWeight="Bold" 
                               Foreground="{DynamicResource AccentBrush}" Margin="0,30,0,10"/>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                        <TextBox Text="{Binding NewListName, UpdateSourceTrigger=PropertyChanged}" 
                                 Width="200" Height="30" Margin="0,0,10,0" Style="{DynamicResource TextboxStyle}" 
                                 Tag="Yeni Liste Adı..."/>

                        <Button Content="Oluştur" Command="{Binding CreateNewListCommand}" 
                                Width="80" Height="30" Background="{DynamicResource AccentBrush}" Foreground="White">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="5"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                    </StackPanel>

                    <ItemsControl ItemsSource="{Binding MyCustomLists}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button Margin="0,0,0,10" Height="Auto" 
                    HorizontalContentAlignment="Stretch"
                    Click="BtnOpenList_Click" 
                    Tag="{Binding}">

                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="bd" Background="{DynamicResource CardBackgroundBrush}" 
                                CornerRadius="10" Padding="15" BorderThickness="1" BorderBrush="Transparent">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <StackPanel>
                                                        <TextBlock Text="{Binding Name}" FontWeight="Bold" Foreground="{DynamicResource PrimaryTextBrush}" FontSize="16"/>
                                                        <TextBlock Text="{Binding GameCount, StringFormat='{} {0} Oyun'}" Foreground="{DynamicResource MutedTextBrush}" Margin="0,5,0,0"/>
                                                    </StackPanel>
                                                    <TextBlock Grid.Column="1" Text="❯" VerticalAlignment="Center" Foreground="{DynamicResource MutedTextBrush}" FontSize="16"/>
                                                </Grid>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="bd" Property="Background" Value="{DynamicResource InputBackgroundBrush}"/>
                                                    <Setter TargetName="bd" Property="BorderBrush" Value="{DynamicResource AccentBrush}"/>
                                                    <Setter Property="Cursor" Value="Hand"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                </StackPanel>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>