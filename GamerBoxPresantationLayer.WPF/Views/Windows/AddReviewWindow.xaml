<Window x:Class="GamerBoxPresantationLayer.WPF.AddReviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="İnceleme Yaz" Height="450" Width="400"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        AllowsTransparency="True" Background="Transparent"
        WindowStyle="None" MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Border Background="{DynamicResource MainBackgroundBrush}" 
            BorderBrush="{DynamicResource AccentBrush}" 
            BorderThickness="1" CornerRadius="10">

        <Border.Effect>
            <DropShadowEffect BlurRadius="15" ShadowDepth="5" Opacity="0.5"/>
        </Border.Effect>

        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="0,0,0,15">
                <TextBlock Text="İNCELEME YAZ" Foreground="{DynamicResource AccentBrush}" 
                           FontSize="18" FontWeight="Bold" 
                           VerticalAlignment="Center" HorizontalAlignment="Left"/>

                <Button Style="{StaticResource MiniButtons}" Content="&#xE8BB;" 
                        HorizontalAlignment="Right" Click="btnClose_Click" ToolTip="Kapat"/>
            </Grid>

            <StackPanel Grid.Row="1">
                <TextBlock x:Name="txtGameTitle" Text="Oyun Adı" Foreground="{DynamicResource PrimaryTextBrush}" 
                           FontSize="16" Margin="0,0,0,10" FontWeight="SemiBold"/>

                <Label Content="Puanınız (1-5)" Foreground="{DynamicResource SecondaryTextBrush}"/>

                <ComboBox x:Name="cmbRating" Style="{StaticResource ModernComboBox}" Height="35" SelectedIndex="4" 
                          Background="{DynamicResource InputBackgroundBrush}" 
                          Foreground="{DynamicResource PrimaryTextBrush}" BorderThickness="0" Padding="10,0"
                          VerticalContentAlignment="Center">
                    <ComboBox.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </ComboBox.Resources>
                    <ComboBoxItem Content="1 - Çok Kötü"/>
                    <ComboBoxItem Content="2 - Kötü"/>
                    <ComboBoxItem Content="3 - Orta"/>
                    <ComboBoxItem Content="4 - İyi"/>
                    <ComboBoxItem Content="5 - Harika"/>
                </ComboBox>

                <Label Content="Yorumunuz" Foreground="{DynamicResource SecondaryTextBrush}" Margin="0,10,0,0"/>
                <TextBox x:Name="txtContent" Height="120" TextWrapping="Wrap" AcceptsReturn="True" Padding="10"
                         Style="{DynamicResource TextboxStyle}" VerticalContentAlignment="Top"/>

                <Button Content="GÖNDER" Height="45" Margin="0,20,0,0" 
                        Background="{DynamicResource AccentBrush}" Foreground="White" FontWeight="Bold"
                        Click="btnSubmit_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>