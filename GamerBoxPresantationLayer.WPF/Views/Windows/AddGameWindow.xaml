<Window x:Class="GamerBoxPresantationLayer.WPF.AddGameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Yeni Oyun Ekle" Height="650" Width="450"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        AllowsTransparency="True" Background="Transparent"
        WindowStyle="None" MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Border Background="{DynamicResource MainBackgroundBrush}" 
            BorderBrush="{DynamicResource AccentBrush}" 
            BorderThickness="1" CornerRadius="10">
        <Border.Effect>
            <DropShadowEffect BlurRadius="15" ShadowDepth="5" Opacity="0.5"/>
        </Border.Effect>

        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="0,0,0,15">
                <TextBlock Text="YENİ OYUN EKLE" Foreground="{DynamicResource AccentBrush}" 
                           FontSize="20" FontWeight="Bold" VerticalAlignment="Center"/>
                <Button Style="{StaticResource MiniButtons}" Content="&#xE8BB;" 
                        HorizontalAlignment="Right" Click="btnClose_Click" ToolTip="Kapat"/>
            </Grid>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,0,0,20">
                <StackPanel>
                    <Label Content="Oyun Adı" Foreground="{DynamicResource SecondaryTextBrush}"/>
                    <TextBox Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}" Height="35" Padding="5" Style="{DynamicResource TextboxStyle}"/>

                    <Label Content="Tür (Örn: RPG, FPS)" Foreground="{DynamicResource SecondaryTextBrush}" Margin="0,10,0,0"/>
                    <TextBox Text="{Binding Genre, UpdateSourceTrigger=PropertyChanged}" Height="35" Padding="5" Style="{DynamicResource TextboxStyle}"/>

                    <Label Content="Açıklama" Foreground="{DynamicResource SecondaryTextBrush}" Margin="0,10,0,0"/>
                    <TextBox Text="{Binding Description}" Height="100" TextWrapping="Wrap" Padding="5" AcceptsReturn="True" 
                             Style="{DynamicResource TextboxStyle}" VerticalContentAlignment="Top"/>

                    <Label Content="Fiyat (TL)" Foreground="{DynamicResource SecondaryTextBrush}" Margin="0,10,0,0"/>
                    <TextBox Text="{Binding PriceText}" Height="35" Padding="5" Style="{DynamicResource TextboxStyle}"/>

                    <Label Content="Oyun Görseli" Foreground="{DynamicResource SecondaryTextBrush}" Margin="0,10,0,0"/>
                    <DockPanel>
                        <Button Command="{Binding SelectImageCommand}" Content="..." Width="40" DockPanel.Dock="Right" Margin="5,0,0,0"
                                Background="{DynamicResource InputBackgroundBrush}" Foreground="{DynamicResource PrimaryTextBrush}" BorderThickness="0">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="5"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                        <TextBox Text="{Binding ImageUrl}" Height="35" Padding="5" IsReadOnly="True" Style="{DynamicResource TextboxStyle}"/>
                    </DockPanel>

                    <Image Source="{Binding ImageUrl}" Height="150" Margin="0,15,0,0" Stretch="Uniform" />
                </StackPanel>
            </ScrollViewer>

            <Button Grid.Row="2" Command="{Binding SaveCommand}" Content="KAYDET" Height="50" 
                    Background="{DynamicResource AccentBrush}" Foreground="White" FontWeight="Bold" FontSize="16">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>
        </Grid>
    </Border>
</Window>