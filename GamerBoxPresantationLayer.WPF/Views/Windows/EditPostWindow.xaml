<Window x:Class="GamerBoxPresantationLayer.WPF.Views.Windows.EditPostWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gönderiyi Düzenle" Height="300" Width="400"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent">

    <Border Background="{DynamicResource MainBackgroundBrush}" 
            BorderBrush="{DynamicResource AccentBrush}" BorderThickness="1" CornerRadius="10">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="GÖNDERİYİ DÜZENLE" Foreground="{DynamicResource AccentBrush}" 
                       FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>

            <TextBox Grid.Row="1" x:Name="txtContent" TextWrapping="Wrap" AcceptsReturn="True" 
                     Style="{DynamicResource TextboxStyle}" VerticalContentAlignment="Top" Padding="10"/>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
                <Button Content="İptal" Width="80" Height="35" Margin="0,0,10,0"
        Background="{DynamicResource AccentBrush}" Foreground="{DynamicResource PrimaryTextBrush}"
        FontWeight="Bold" BorderThickness="1"
        Click="BtnCancel_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>
                <Button Content="Kaydet" Width="80" Height="35" 
                        Background="{DynamicResource AccentBrush}" Foreground="White" FontWeight="Bold"
                        Click="BtnSave_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>