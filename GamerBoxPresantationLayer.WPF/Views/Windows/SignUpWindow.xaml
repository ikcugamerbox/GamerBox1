<Window x:Class="GamerBoxPresantationLayer.WPF.SignUpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SignUpWindow" Height="520" Width="460"
        AllowsTransparency="True" Background="Transparent"
        WindowStyle="None" WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid>
        <Canvas>

            <!-- KAPAMA BUTONU -->
            <Button Content="" x:Name="btnClose" Click="btnClose_Click"
                    Canvas.Left="405" Canvas.Top="70" FontFamily="Segoe MDL2 Assets"
                    Width="22" Height="22" Panel.ZIndex="5">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="LightSlateGray" CornerRadius="50">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="DarkSlateGray"/>
                                <Setter Property="Foreground" Value="Wheat"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <!-- ANA KUTU -->
            <Border Height="420" Width="380" Canvas.Left="40" Canvas.Top="70"
                    Background="DimGray" CornerRadius="35">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="20"/>
                </Border.Effect>
            </Border>

            <!-- BAŞLIK -->
            <Label Content="Kayıt Ol" FontSize="23" FontWeight="Bold"
                   Canvas.Left="60" Canvas.Top="80" />


            <Label Content="Ad Soyad" FontWeight="SemiBold"
                   Canvas.Left="60" Canvas.Top="135"/>
            <TextBox x:Name="txtName" Height="24" Width="330"
                     Canvas.Left="60" Canvas.Top="160"
                     Style="{DynamicResource TextboxStyle}"/>

            <Label Content="Kullanıcı Adı" FontWeight="SemiBold"
                   Canvas.Left="60" Canvas.Top="195"/>
            <TextBox x:Name="txtUsername" Height="24" Width="330"
                     Canvas.Left="60" Canvas.Top="220"
                     Style="{DynamicResource TextboxStyle}"/>

            <Label Content="E-Posta" FontWeight="SemiBold"
                   Canvas.Left="60" Canvas.Top="255"/>
            <TextBox x:Name="txtEmail" Height="24" Width="330"
                     Canvas.Left="60" Canvas.Top="280"
                     Style="{DynamicResource TextboxStyle}"/>

            <Label Content="Şifre" FontWeight="SemiBold"
                   Canvas.Left="60" Canvas.Top="315"/>
            <PasswordBox x:Name="txtPass" Height="24" Width="330"
                         Canvas.Left="60" Canvas.Top="340" Style="{StaticResource PasswordBoxStyle}"/>

            <Label Content="Şifre Tekrar" FontWeight="SemiBold"
                   Canvas.Left="60" Canvas.Top="375"
                    />
            <PasswordBox x:Name="txtPassConfirm" Height="24" Width="330"
                         Canvas.Left="60" Canvas.Top="400" Style="{StaticResource PasswordBoxStyle}"/>


            <!-- KAYIT OL BUTONU -->
            <Button Content="Kayıt Ol" Width="150" Height="40"
                    Canvas.Left="180" Canvas.Top="435"
                    FontSize="16" FontWeight="Bold"
                    Click="Register_Click" HorizontalAlignment="Center" VerticalAlignment="Top">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="LightSlateGray"
                                CornerRadius="15" Margin="-60,0,-20,5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="DarkSlateGray"/>
                                <Setter Property="Foreground" Value="Wheat"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <!-- GİRİŞ YAP YAZISI -->
            <Button Content="Zaten hesabın var mı? Giriş Yap"
                    Canvas.Left="155" Canvas.Top="472"
                    Background="Transparent" BorderThickness="0"
                    Foreground="LightBlue" Click="GoSignIn_Click"/>

        </Canvas>
    </Grid>
</Window>